# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

alias amend="git commit --amend"
alias amend!="git commit --amend --no-edit"
alias asu="cd ~/code/rails/activesupport"
alias aliases='vim ~/.dotfiles/bash/aliases'
alias bake='bundle exec rake'
alias be='bundle exec'
alias bi='bundle install'
alias bu='bundle update'
alias bunbang='bundle install && !!'
alias bbp='brunch b -P'
alias bb='brunch b'
alias bw='brunch w'
alias c='cd ~/moove-it'
alias d='cd ~/.dotfiles'
alias dbprep='rdm && rdtp'
alias gad='git add .'
alias gc='git commit'
alias gca='git commit -a'
alias gcaa='git commit -a --amend -C HEAD'
alias gcl='git clone'
alias gcm='git commit -m'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias get='sudo apt-get install'
alias gg='git lg'
alias glgga='git log --all --decorate --graph'
alias gmaster='git push gerrit `git_branch_name`:master'
alias gpush='git push gerrit HEAD:refs/for/`git_branch_name`'
alias ghead='git push gerrit HEAD:refs/for/`git_branch_name`'
alias gpsuh='git push gerrit HEAD:refs/for/`git_branch_name`'
alias draft='git push gerrit HEAD:refs/drafts/`git_branch_name`'
alias gmapright='git push origin HEAD:refs/for/mapright-react'
alias gdgerrit='git push gerrit HEAD:refs/for/develop/`git_branch_name`'
alias gmgerrit='git push gerrit HEAD:refs/for/master/`git_branch_name`'
alias gdorigin='git push origin HEAD:refs/for/develop/`git_branch_name`'
alias gdevment='git push gerrit HEAD:refs/for/development/`git_branch_name`'
alias gnew_branch='git push gerrit gerrit/master:refs/heads/`git_branch_name`'
alias gclear="git filter-branch --msg-filter 'sed -e \"/^\s*Change-Id:\sI[a-f0-9]\{40\}$/d\"'"
alias gpr='git pull --rebase'
alias grc='git rebase --continue'
alias pd='hub pull-request -b development'
alias pm='hub pull-request -b master'
alias h='heroku'
alias hpush='git push heroku'
alias irb='irb --readline -r irb/completion'
alias killruby='killall -9 ruby'
alias killthin='kill -9 `ps -ef | grep thin | grep rails | grep -E "andreas *[0-9]+" -o | grep "[0-9]*" -o`'
alias nrb='npm run build'
alias remore='!! | more'
alias rc='rails console'
alias rdm="be rake db:migrate"
alias rs='bundle install && rails server -p 3000'
alias so='source ~/.dotfiles/bash/aliases'
alias startpostgres='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias stoppostgres='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log stop'
alias u='cd ..'
alias vi='vim'
alias production-console='heroku run console'
alias production-tail='heroku logs --tail'
